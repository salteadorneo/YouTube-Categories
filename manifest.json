{
    "manifest_version": 3,
    "name": "YouTube Categories",
    "version": "1.4",
    "description": "Chrome extension to categorize your YouTube subscriptions",
    "default_locale": "en",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "utils.js",
                "storage.js",
                "subscriptions.js",
                "channels.js",
                "watch.js"
            ]
        }
    ]
}