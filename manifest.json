{
    "manifest_version": 3,
    "name": "YouTube Categories",
    "version": "1.0",
    "description": "Chrome extension to categorize your YouTube subscriptions",
    "default_locale": "en",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/feed/subscriptions"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "utils.js",
                "storage.js",
                "subscriptions.js"
            ]
        }
    ]
}